<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="300dp"
                                    card_view:cardCornerRadius="16dp"
                                    android:id="@+id/itemHolder"
                                    android:layout_margin="@dimen/vertical_margin">

    <android.support.v7.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/movies"
            android:id="@+id/imageTV"
            android:scaleType="centerCrop"/>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@color/blur"
            android:layout_height="match_parent"/>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/vertical_margin">

            <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/titleTV"
                    android:layout_width="wrap_content"
                    android:text="@string/app_name"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginStart="@dimen/vertical_margin"
                    android:layout_marginLeft="@dimen/vertical_margin"
                    android:layout_marginEnd="@dimen/vertical_margin"
                    android:layout_marginRight="@dimen/vertical_margin"
                    android:layout_marginBottom="@dimen/vertical_margin"
                    app:layout_constraintStart_toStartOf="parent"
                    android:maxLines="1"
                    style="@style/titleStyle"
                    app:layout_constraintTop_toTopOf="parent"/>

            <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/releaseDateTV"
                    android:layout_width="wrap_content"
                    android:text="@string/app_name"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginStart="@dimen/vertical_margin"
                    android:layout_marginLeft="@dimen/vertical_margin"
                    android:layout_marginEnd="@dimen/vertical_margin"
                    android:layout_marginRight="@dimen/vertical_margin"
                    android:layout_marginBottom="@dimen/vertical_margin"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/releaseDateStyle"
                    app:layout_constraintTop_toBottomOf="@id/titleTV"/>

            <android.support.v7.widget.AppCompatTextView android:layout_width="match_parent"
                                                         android:layout_height="wrap_content"
                                                         android:text="Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem IpsumLorem IpsumLorem IpsumLoremIpsumLoremIpsumLorem IpsumLorem IpsumLorem IpsumLorem IpsumLorem IpsumLorem IpsumLorem IpsumLorem IpsumLorem IpsumLorem IpsumLorem IpsumLorem IpsumLorem IpsumLorem IpsumLorem IpsumLorem Ipsum"
                                                         android:textColor="@color/white"
                                                         android:layout_marginStart="@dimen/vertical_margin"
                                                         android:layout_marginLeft="@dimen/vertical_margin"
                                                         android:layout_marginEnd="@dimen/vertical_margin"
                                                         android:layout_marginRight="@dimen/vertical_margin"
                                                         android:layout_marginBottom="@dimen/vertical_margin"
                                                         android:maxLines="5"
                                                         style="@style/descriptionStyle"
                                                         android:textSize="16dp"
                                                         android:id="@+id/descriptionTV"
                                                         android:ellipsize="end"
                                                         android:layout_marginTop="80dp"
                                                         app:layout_constraintTop_toBottomOf="@id/releaseDateTV"/>


        </android.support.constraint.ConstraintLayout>


          </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>